    "@types/node": "^18.11.19",
    "autoprefixer": "^10.4.13",
    "concurrently": "^7.6.0",
    "postcss": "^8.4.21",
    "svelte-check": "^3.0.3",
    "svelte-preprocess": "^5.0.1",
    "tailwindcss": "^3.2.4",
    "tsx": "~3.12.2",
    "typescript": "^4.9.5",
    "vite": "^4.0.4",
    "vite-plugin-chrome-extension": "0.0.7"
  },
